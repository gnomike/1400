import math

def find_trapezoid_perimeter():
    # Ввод данных
    a = float(input("Введите длину большего основания: "))
    b = float(input("Введите длину меньшего основания: "))
    h = float(input("Введите высоту: "))
    
    # Проверка корректности входных данных
    if a <= 0 or b <= 0 or h <= 0 or a <= b:
        print("Ошибка: основания и высота должны быть положительными, "
              "а большее основание должно быть больше меньшего!")
        return
    
    # Вычисление боковой стороны
    c = math.sqrt(h**2 + ((a - b)/2)**2)
    
    # Вычисление периметра
    perimeter = a + b + 2 * c
    
    print(f"Периметр трапеции: {perimeter:.2f}")

# Запуск программы
find_trapezoid_perimeter()
